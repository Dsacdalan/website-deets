extends layout

block content
  div(class='container')
    div(class='jumbotron pt-3' id='jumbotronHome')
      h1 Welcome to Website Deets! 
      p Here you can enter in any website or IP and get its location information.
      hr(class='my-2')
      form(action='/search')
        div(class='form-group')
          label(for='q') Get Deets:
          input(class='form-control' type='search' placeholder='Website or IP' id='q' name='q')
        button(class='btn btn-outline-success' type='submit') Search
      if history.length !== 0
        hr(class='mt-3 mb-2')      
        h1 History
        ul
          each val in history
            li
              - var link = '/search?q=' + val
              a(href=link) #{val}


