extends layout

block content
  div(class='container')
    div(class='jumbotron' id='jumbotronSearch')
      div(class='row')
        div(class='row col-xs-12')
          h1 #{name}
            div
              - var time_zone = (data.time_zone ? data.time_zone : "Unknown" )
              h3 #{time_zone} Time Zone

      div(class='row')
        div(class='col-xs-12 col-md-6')
          h3 Location
          ul
            - var city = (data.city ? data.city : "Unknown" )
            li City: #{city}
            - var region_name = (data.region_name ? data.region_name : "Unknown" )
            li Region: #{region_name}
            - var zip_code = (data.zip_code ? data.zip_code : "Unknown" )
            li Zip Code: #{zip_code}
            - var country_name = (data.country_name ? data.country_name : "Unknown" )
              li Country: #{country_name}
          h3 Coordinates 
          ul
            li Latitude: #{data.latitude}
            li Longitude: #{data.longitude}
        div(class='col-xs-12 col-md-6')
          h3 Google Maps
          div(id='map')
          script.
            function initMap() {
              // Create a map object and specify the DOM element for display.
              var map = new google.maps.Map(document.getElementById('map'), {
                center: {lat: "#{data.latitude}", lng: "#{data.longitude}"},
                zoom: 8
              });
            }
          script(async defer src='https://maps.googleapis.com/maps/api/js?key=ADD_KEY&callback=initMap')
          

            


    